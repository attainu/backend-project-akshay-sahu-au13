<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/img/home-bg.jpg')">
    <div class="container-fluid">

        {{!-- Blog post form --}}
        <section>
            <center><span style="color:orangered;">{{msg}}</span></center>
            <hgroup>
                <h2>Want to change some content in your blog?</h2>
                <p>Kindly feel free to edit your blog...</p>
            </hgroup>

            <form action="/auth/profile/editblog/{{blog._id}}" method="POST" class="log-form blog-form">

                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" class="group log-input" id="title" placeholder="Title goes here..."
                        value="{{blog.title}}">
                </div>
                <div class="form-group">
                    <label for="category">Category</label>
                    <select name="genre" id="category" class="group log-input">
                        <option value="select" selected="selected" disabled>Select a Category</option>
                        <option value="Nature">Nature</option>
                        <option value="Technology">Technology</option>
                        <option value="Travel">Travel</option>
                        <option value="Entertainment">Entertainment</option>
                        <option value="Education">Education</option>
                        <option value="Politics">Politics</option>
                        <option value="General">General</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" class="ta-desc group log-input" cols="60"
                        rows="10">{{blog.description}}</textarea>
                </div>

                <div class="form-group">
                    <label for="body">Content</label>
                    <textarea name="body" id="body" class="ta-desc group log-input" cols="60"
                        rows="50">{{blog.body}}</textarea>
                </div>

                <div class="container-log-btn">
                    <button type="submit" name="btn_submit" class="log-form-btn">
                        <span>Done Editing?</span>
                    </button>
                </div>

            </form>



        </section>
    </div>
</header>

