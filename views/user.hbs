<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/img/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Welcome {{user.firstName}}</h1>
                    <hr class="small">
                    <span class="subheading">A heaven created solely for writers</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container" id="read-blogs">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            {{!-- ------------------------------------------------------------ --}}
            <ul>
                {{#each blogs}}
                <li>
                    <div class="post-preview">

                        <a href="/auth/user/userblogs/{{this._id}}" target="_blank">
                            <h2 class="post-title">
                                {{this.title}}
                            </h2>
                            <h3 class="post-subtitle">
                                {{{this.description}}}
                            </h3>
                        </a>
                        <p class="post-meta"><a href="/auth/user/profile/{{user._id}}">Posted by you</a>
                            on {{this.date}}</p>
                    </div>
                </li>
                {{/each}}
            </ul>

            {{!-- ---------------------------------------------------------- --}}

            <!-- Pager -->
            <ul class="pager">
                <li class="next">
                    <a href="#">Older Posts &rarr;</a>
                </li>
            </ul>
        </div>
    </div>
</div>

