<!-- Page Header -->

<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('img/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>BlogginBow</h1>
                    <hr class="small">
                    <span class="subheading">A heaven created solely for writers</span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="searchbar">
    <form action="/" method="POST">
        <label for="search" class="search">Categories</label><br>
        <select name="search" id="search">
            <option value="Nofilter" selected="selected" disabled>No filter applied</option>
            <option value="Entertainment">Entertainment</option>
            <option value="Technology">Technology</option>
            <option value="Education">Education</option>
            <option value="Nature">Nature</option>
            <option value="Politics">Politics</option>
            <option value="Travel">Travel</option>
            <option value="General">General</option>
        </select>
        <button type="submit" class="search-submit">Search</button>
    </form>
    <div class="cat-msg">
        <p><span class="catergory_msg">{{msg}}</span></p>
    </div>
</div><br><br>
<!-- Main Content -->
<div class="container" id="read-blogs">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

            {{!-- Dynamic Blogs --}}

            <ul>

                {{#each blogs}}

                <li>
                    <div class="post-preview">
                        <a href="/readblogs/{{this._id}}" target="_blank">
                            <h2 class="post-title">
                                {{this.title}}
                            </h2>
                            <h3 class="post-subtitle">
                                {{{this.description}}}
                            </h3>
                        </a>
                        <p class="post-meta">Posted by <a href="/auth/author/profile/{{this.userId._id}}"
                                target="_blank">{{this.userId.firstName}}</a> on
                            {{dateLocal this.date}} under
                            "{{this.genre}}"</p>
                    </div>
                    <hr>
                </li>
                {{/each}}
            </ul>
            {{!-- Dynamic blog section ends --}}

            <hr>
            <!-- Pager -->
            <ul class="pager">
                <li class="next">
                    <a href="#">Older Posts &rarr;</a>
                </li>
            </ul>
        </div>
    </div>
</div>

